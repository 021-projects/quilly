.ql-tiny
  --ql-w-arrow: 6px
  .ql-tooltip
    background-color: var(--ql-color-tooltip-bg)
    box-shadow: var(--ql-shadow-tooltip)
    color: var(--ql-color-text)
    border-radius: var(--ql-radius-tooltip)

  .ql-tooltip.ql-editing
    .ql-tooltip-editor
      display: block
    .ql-formats
      visibility: hidden

  .ql-tooltip.ql-fixed
    position: fixed
    z-index: 1000

  .ql-tooltip-editor
    display: none
    input[type=text]
      background: transparent
      border: none
      color: var(--ql-color-surface)
      font-size: 14px
      height: 100%
      outline: none
      padding: 14px
      position: absolute
      width: 100%
    a
      &:before
        color: var(--ql-color-inactive)
        content: "\00D7"
        font-size: 26px
      top: 8px;
      position: absolute
      right: 14px
