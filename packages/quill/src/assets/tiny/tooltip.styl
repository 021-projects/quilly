.ql-tiny
  --ql-w-arrow: 6px
  .ql-tooltip
    background-color: var(--ql-color-tooltip-bg)
    box-shadow: var(--ql-shadow-tooltip)
    color: var(--ql-color-text)
    border-radius: var(--ql-radius-tooltip)

  .ql-tooltip.ql-editing
    .ql-tooltip-editor
      display: block
    .ql-formats
      visibility: hidden

  .ql-tooltip.ql-fixed
    position: fixed
    z-index: 1000

  .ql-tooltip-editor
    display: none
    input[type=text]
      background: transparent
      border: none
      color: var(--ql-color-surface)
      font-size: 14px
      height: 100%
      outline: none
      padding: 14px 45px
      position: absolute
      width: 100%
    .ql-btn-icon
      display: flex
      align-items: center
      position: absolute
      height: 100%
      padding: 0 10px
      z-index: 10
      &:before
        font-size: 24px
    .ql-close
      left: 0
      &:before
        font-family: Quillico
        color: var(--ql-color-inactive)
        content: "\e902"
    .ql-apply
      right: 0
      &:before
        font-family: Quillico
        font-size: 32px
        color: var(--ql-color-accent)
        content: "\e903"