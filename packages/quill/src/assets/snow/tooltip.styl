:root
  --ql-m-snow-tooltip: 8px

.ql-snow
  .ql-tooltip
    background-color: var(--ql-color-tooltip-bg)
    border: 1px solid var(--ql-color-border)
    box-shadow: 0px 0px 5px var(--ql-color-shadow)
    color: var(--ql-color-text)
    padding: 5px 12px
    white-space: nowrap
    &::before
      content: "Visit URL:"
      line-height: 26px
      margin-right: var(--ql-m-snow-tooltip)
    input[type=text]
      display: none
      border: 1px solid var(--ql-color-border)
      font-size: 13px
      height: 26px
      margin: 0px
      padding: 3px 5px
      width: 170px
    a.ql-preview
      display: inline-block
      max-width: 200px
      overflow-x: hidden
      text-overflow: ellipsis
      vertical-align: top
    a.ql-action::after
      border-right: 1px solid var(--ql-color-border)
      content: 'Edit'
      margin-left: calc(var(--ql-m-snow-tooltip) * 2)
      padding-right: var(--ql-m-snow-tooltip)
    a.ql-remove::before
      content: 'Remove'
      margin-left: var(--ql-m-snow-tooltip)
    a
      line-height: 26px
  .ql-tooltip.ql-editing
    a.ql-preview, a.ql-remove
      display: none
    input[type=text]
      display: inline-block
    a.ql-action::after
      border-right: 0px
      content: 'Save'
      padding-right: 0px
  .ql-tooltip[data-mode=link]::before
    content: var(--ql-phrase-enter-link) ':'
  .ql-tooltip[data-mode=formula]::before
    content: var(--ql-phrase-enter-formula) ':'
  .ql-tooltip[data-mode=video]::before
    content: var(--ql-phrase-enter-video) ':'
