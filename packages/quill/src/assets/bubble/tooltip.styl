.ql-bubble
  --ql-w-arrow: 6px
  .ql-tooltip
    background-color: var(--ql-color-tooltip-bg)
    border-radius: 25px
    color: var(--ql-color-text)
  .ql-tooltip-arrow
    border-left: var(--ql-w-arrow) solid transparent
    border-right: var(--ql-w-arrow) solid transparent
    content: " "
    display: block
    left: 50%
    margin-left: calc(-1 * var(--ql-w-arrow))
    position: absolute
  .ql-tooltip:not(.ql-flip) .ql-tooltip-arrow
    border-bottom: var(--ql-w-arrow) solid var(--ql-color-tooltip-bg)
    top: calc(-1 * var(--ql-w-arrow))
  .ql-tooltip.ql-flip .ql-tooltip-arrow
    border-top: var(--ql-w-arrow) solid var(--ql-color-tooltip-bg)
    bottom: calc(-1 * var(--ql-w-arrow))

  .ql-tooltip.ql-editing
    .ql-tooltip-editor
      display: block
    .ql-formats
      visibility: hidden

  .ql-tooltip-editor
    display: none
    input[type=text]
      background: transparent
      border: none
      color: var(--ql-color-text)
      font-size: 13px
      height: 100%
      outline: none
      padding: 10px 20px
      position: absolute
      width: 100%
    a
      &:before
        color: var(--ql-color-inactive)
        content: "\00D7"
        font-size: 16px
        font-weight: bold
      top: 10px
      position: absolute
      right: 20px
